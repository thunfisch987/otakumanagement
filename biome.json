{
	"$schema": "https://biomejs.dev/schemas/1.5.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"nursery": {
				"useExportType": "warn",
				"useImportType": "warn",
				"useGroupedTypeImport": "warn",
				"noUselessTernary": "warn",
				"noUnusedImports": "warn"
			},
			"style": {
				"useNamingConvention": "warn"
			}
		}
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "single",
			"jsxQuoteStyle": "single",
			"trailingComma": "all",
			"semicolons": "always",
			"indentStyle": "tab",
			"indentWidth": 4
		}
	}
}
